<div class="container">
  <h1 class="display1 text-center text-white bg-primary p-5">Eat DA Burgers!</h1>

  <img src="/assets/img/burger.png" class="img-fluid" alt="smiling burger illustration">

  <hr>

  <div class="row">
    <div class="col">
      <h5 class="text-white text-center bg-success p-2 mb-1"><i>Order da Burger</i></h5>
      <form class="create">
        <div class="form-group row justify-content-center">
          <input type="text" class="col-sm-8 m-1" id="burger" placeholder="type your order here...">
          <button type="submit" class="btn btn-info col-sm-3 m-1">Place Order</button>
        </div>
      </form>
    </div>
  </div>

  <hr>

  <div class="row">
    {{!-- Menu Column --}}
    <div class="col-6">
      <h2 class="text-white text-center bg-danger p-3 mb-2 mt-2">On Your Table</h2>
      <ul>
          {{#each burgers}}
            {{#unless devoured}}
              <li>
                {{burger_name}}
                  <button class="devour btn btn-sm btn-success mb-1" data-id="{{id}}">EAT DA BURGER!</button>
              </li>
            {{/unless}}
          {{/each}}

          <li>
            <p class="text-success"><i>ORDER MOAR BURGERS!</i></p>
          </li>
      </ul>
    </div>

    {{!-- Eaten Column --}}
    <div class="col-6">
      <h2 class="text-white text-center bg-danger p-3 mb-2 mt-2">Burgers Eaten</h2>
      <ul>
          {{#each burgers}}
            {{#if devoured}}
              <li>
                {{burger_name}}
              </li>
            {{/if}}
          {{/each}}

          <li>
            <p class="text-success"><i>Eat more from the menu!</i></p>
          </li>
      </ul>
    </div>
  </div>

  <hr>

</div>
